<div class="pagination">
    {% if paginator.previous_page %}
        <a href="{{ site.url }}{{ paginator.previous_page_path }}" class="previous">芦</a>
    {% else %}
        <span class="previous hidden">芦</span>
    {% endif %}

    <span class="page_number ">page {{ paginator.page }} of {{ paginator.total_pages }}</span>

    {% if paginator.next_page %}
        <a href="{{ site.url }}{{ paginator.next_page_path }}" class="next">禄</a>
    {% else %}
        <span class="next hidden">禄</span>
    {% endif %}
</div>
